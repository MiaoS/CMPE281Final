extends layout

block head
    script(src='/javascripts/sensor.js')
    script.
        $(document).ready(function () {
            $('.modal').on('hidden.bs.modal', function () {
                $(this).find('form')[0].reset();
            });
            $('#panel_title').text('All sensors in the system');
        });

        global.initSensor = function () {
            getAllSensors();
            addControlButton(BTN_ADD_SENSOR);
        }

        controllerFunction = function ($scope, $http) {
            $scope.showSensor = function (sid) {
                window.showSensor(sid);
            }
        };
